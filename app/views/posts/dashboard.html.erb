<div class="container">
    <div class="row">
        <div class="row-md-6">
        		<center><h1 class="title">My Restaurant Profile</h1></center>
        </div>

<div class="column">
	<div class="column-md-6">

<table>
<tr>
	<th>Date</th>
	<th>Restaurant</th>
	<th>Flash Sale</th>
	<th>Start Time</th>
	<th>End Time</th>
	<th colspan="3"></th>
</tr>
	<% @posts.each do |post| %>
<tr>

	<td><%= post.created_at.strftime "%B %d %Y" %></td>
	<td><%= post.restaurant_name %></td>
	<td><%= post.deal %></td>
	<td><%= post.start_time %></td>
	<td><%= post.end_time %></td>
	<td><%= link_to 'Edit Sale', edit_post_path(post) %></td>
	<td><%= link_to 'Delete', post_path(post),
   			method: :delete,
   			data: { confirm: 'Are you sure?' } %></td>

</tr>
	<% end %>
</table>

</div>

<p><center><a href="/posts/new" class="btn btn-default btn-lg">Create A New Flash Sale!</a></center></p>
