
<% if user_signed_in? %>
	<%= link_to 'Dashboard', dashboard_path %>
<% end %>

<div class="row">
	<div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 text-center">	
		<h1 class="title">FLASH SALES</h1>
	</div>
</div>
</br>
<section class="section", id="head">
<div class="container">
<center>
	<table>
		<tr>
			<th>Date</th>
			<th>Restaurant</th>
			<th>Flash Sale</th>
			<th>Start Time</th>
			<th>End Time</th>
			<th colspan="2"></th>
		</tr>
			<% @posts.each do |post| %>
		<tr>

			<td><%= post.created_at %></td>
			<td><%= post.restaurant_name %></td>
			<td><%= post.deal %></td>
			<td><%= post.start_time %></td>
			<td><%= post.end_time %></td>	
		</tr>
			<% end %>
	</table>

</br></br><%= link_to "Home", welcome_index_path %>
</center>
</div>
</section>
